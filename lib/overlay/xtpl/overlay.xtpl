{{#block ('ks-overlay-closable')}}
    {{#if (closable)}}
        <a href="javascript:void('close')"
           aria-label="Close"
           class="{{getBaseCssClasses ('close')}}"
           role='button'>
            <span class="{{getBaseCssClasses ('close-x')}}">{{{closeText}}}</span>
        </a>
    {{/if}}
{{/block}}

<div class="{{getBaseCssClasses ('content')}}">
    {{#block ('ks-overlay-content')}}
        {{{content}}}
    {{/block}}
</div>